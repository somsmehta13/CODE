@model List<CRUD2.Context.Employee>
@{
    ViewBag.Title = "EmployeeList";
}

<table class="table table-responsive table-hover">
    <tr>
        <th>Name</th>
        <th>Fname</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach ( var item in Model)
    { 

       <tr>
            <td>@item.Name</td>
            <td>@item.Fname</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Employee",new {item.ID, item.Name,item.Fname,item.Email,item.Mobile,item.Description})" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete",new {item.ID})" class="btn btn-primary">Delete</a>
            </td>
        </tr>
            }
</table>

